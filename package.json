{
  "name": "xyz",
  "version": "1.0.0",
  "description": "![ahoylemon.xyz](https://ahoylemon.xyz/android-chrome-512x512.png) #### (A Site Lemon Built To Show Sites Lemon Built)",
  "main": "index.js",
  "scripts": {
    "build:pug": "node build-pug.js",
    "build:sass": "node build-sass.js",
    "build:sass:prod": "node build-sass.js --compressed --source-map",
    "build": "npm run build:pug && npm run build:sass",
    "watch:pug": "chokidar \"pug/**/*.pug\" -c \"npm run build:pug\"",
    "watch:sass": "chokidar \"sass/**/*.scss\" -c \"npm run build:sass\"",
    "watch:optimized": "node watch-optimized.js",
    "serve": "browser-sync start --config bs-config.js",
    "serve:fast": "browser-sync start --config bs-config.js",
    "dev": "concurrently \"npm run watch:optimized\" \"npm run serve:fast\" --names \"BUILD,SERVER\" --prefix-colors \"cyan,magenta\" --restart-tries 3",
    "dev:legacy": "concurrently \"npm run watch:pug\" \"npm run watch:sass\" \"npm run serve\" --names \"PUG,SASS,SERVER\" --prefix-colors \"blue,green,magenta\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "browser-sync": "^3.0.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "pug": "^3.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.92.1"
  }
}
