- var testing = true;

doctype html
html(lang="en")
  head
    title Flip a coin
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="css/coin.css")
  body
    #app
      .coin-container
        .coin(:class="{'is-flipping': flipping, 'is-heads': (coinSide == 'heads'), 'is-tails': (coinSide == 'tails') }" @click="flipCoin()")
          .coin-side.heads
            img(:src="computedHeads")
          .coin-side.tails
            img(:src="computedTails")
      .coin-readout(v-if="flipComplete")
        .side {{coinSide}}
      .button-holder
        button.cheat-heads(@click="intend('heads')") Intend Heads
        button.cheat-tails(@click="intend('tails')") Intend Tails
      

    .javascripts
      if testing
        script(src="js/libraries/vue.full.js")
        script.
          const testing = true;
      else
        script(src="js/libraries/vue.min.js")
        script.
          const testing = false;

      script(src="js/min/site.min.js")



