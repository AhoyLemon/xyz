include partials/_variables.pug

doctype xml
rss( version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:atom='http://www.w3.org/2005/Atom' )
  channel
    title ahoylemon üçã xyz
    link= siteURL
    author
      name Lemon
      email lemon@thefpl.us
      url https://thefpl.us/meet/lemon
    language en-us
    description= description
    icon #{siteURL}/apple-touch-icon-120x120.png
    image
      url #{siteURL}/apple-touch-icon-120x120.png
      title Lemon Logo
      link #{siteURL}/feed.xml
      width 120
      height 120

    each s,index in lemonSites
      item
        title= s.title
        link= s.url
        description= s.description
        pubDate= s.launched
        if s.fgImage
          if s.fgImage.includes("svg")
            - fgImage = "svg/"+s.fgImage
          else if s.fgImage
            - fgImage = "img/"+s.fgImage
          image
            url #{siteURL}/#{fgImage}
            title #{s.title} Logo
            link= s.url
